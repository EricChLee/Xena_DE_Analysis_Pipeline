<div class="row px-3 pb-3">
	<div class="col-lg-3 bold text-lg-right my-auto">
		{{ this.args.label }}
		{%- if this.args.description %}
			<sup data-toggle="tooltip" title="{{ this.args.description }}"><i class="far fa-question-circle"></i></sup>
		{% endif -%}:
	</div>
	<div class="col-lg-6 pt-2 pt-lg-0">
		<select
			id="{{ this.args.name }}"
			name="{{ this.args.name }}"
			class="form-control nodecoration tiny bg-white px-2 py-1 mb-0"
		>
		{% for choice in this.args.choices %}
			<option{% if choice == this.args.default %} selected{% endif %}>{{ choice }}</option>
		{% endfor %}
		</select>
	</div>
</div>

<script>
(function() {
	var selectBox = document.getElementById('{{ this.args.name }}');

	window.addEventListener("message", (event) => {
		var localhost_patt = /^http:\/\/localhost:[0-9]+$/;
		var xenabrowser_patt = /^https:\/\/([a-z]+\.)?xenabrowser.net$/;
		if (!localhost_patt.test(event.origin) && !xenabrowser_patt.test(event.origin))
			return;

		var para = JSON.parse(event.data);
		var unit = para.preferredExpression.unit;

		var countData = unit && !(unit.trim().toLowerCase().startsWith("log")) && unit.trim().toLowerCase().includes("count");
		if ( countData) {
			selectBox.value = 'limma_voom';
			for (var i=0; i<selectBox.length; i++) {
				if (selectBox.options[i].value === "limma")
					selectBox.remove(i);
			}
		}

		var logData = unit && unit.trim().toLowerCase().startsWith("log");
		var pseudocount = 0;
		var pattern = /\+\s*[0-9]+(\.[0-9]+)?\s*\)/;
		var number = /[0-9]+(\.[0-9]+)?/;
		var pseudocount = unit && pattern.exec(unit) && parseFloat(unit.match(pattern)[0].match(number)[0]);
		
		if (logData && pseudocount >= 1) {
			selectBox.value = 'limma';
			for (var i=0; i<selectBox.length; i++) {
				if (selectBox.options[i].value === "limma_voom" || selectBox.options[i].value === "edgeR" || selectBox.options[i].value === "DESeq2")
					selectBox.remove(i);
			}
		}

		if (!unit /*no unit*/ || (logData && pseudocount < 1) /*log data with negative values*/ || (unit && !countData && !logData) /*unknown unit*/) {
			var s = 'characteristic direction';
			selectBox.innerHTML=''
			var option = document.createElement("option");
			option.value = s;
			option.text  =s;
			selectBox.appendChild(option);
		}
		
		var intCountData = unit && !(unit.trim().toLowerCase().startsWith("log")) && unit.trim().toLowerCase() === "count";
		if (!intCountData) {
			for (var i=0; i<selectBox.length; i++) {
				if (selectBox.options[i].value == 'DESeq2')
					selectBox.remove(i);
			}
		}

		event.source.postMessage('ack', '*');
	}, false);
})();

</script>